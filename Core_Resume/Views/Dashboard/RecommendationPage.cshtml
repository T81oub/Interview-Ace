@{
    Layout = "_Layout.cshtml";
}
<style>
    .containerpage {
        justify-content: center;
        align-items: center;
        display: flex;
        max-width: 800px;
        height:600px;
        margin: auto;
        padding: 30px;
        background-color: #f4f4f4;
        border-radius: 10px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    }

    h1 {
       
        font-size: 32px;
        font-weight: bold;
        margin-bottom: 30px;
        color: #333;
    }
    .btn {
        font-family: "Roboto", sans-serif;
        font-size: 16px;
        
        background: #1E90FF;
        width: 160px;
        padding: 20px;
        text-align: center;
        text-decoration: none;
        
        color: #fff;
        border-radius: 5px;
        cursor: pointer;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        -webkit-transition-duration: 0.3s;
        transition-duration: 0.3s;
        -webkit-transition-property: box-shadow, transform;
        transition-property: box-shadow, transform;
    }

        .btn:hover, .btn:focus, .btn:active {
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
            -webkit-transform: scale(1.1);
            transform: scale(1.1);
        }

   
    

        
</style>

<div class="containerpage">
<button type="button" class="btn" id="myButton" onclick="redirectToRecommendation()">Recommend me Jobs list</button>

    <div id="loadingSpinner" class="dots-container">
        <div class="dots-container">
    <h1>Loading </h1>
   
    <div class="dots"></div>
    <div class="dots"></div>
    <div class="dots"></div>
    <div class="dots"></div>
    <div class="dots"></div>
        </div>
</div>
</div>

<script>
    const loadingSpinner = document.getElementById('loadingSpinner');
    const button = document.getElementById('myButton');
    loadingSpinner.style.display = 'none';
    function redirectToRecommendation() {
        // hide button
        button.style.display = 'none';

        // show loading spinner
        loadingSpinner.style.display = 'block';

        // redirect to dashboard/Recommendation after a delay of 1 second
        setTimeout(function () {
           window.location.href = '/dashboard/Recommendation';
        }, 1000);
    }
</script>
